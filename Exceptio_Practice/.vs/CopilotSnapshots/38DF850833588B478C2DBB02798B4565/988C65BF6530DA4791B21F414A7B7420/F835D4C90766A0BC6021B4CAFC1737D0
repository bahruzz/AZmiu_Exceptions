using Exceptio_Practice.Exceptions;
using Exceptio_Practice.Model;
using Exceptio_Practice.Services.Interfaces;
using System;
using System.Transactions;

namespace Exceptio_Practice.Services
{
	public class TransportService : ITransportService
	{
		 Transport[] transports = new Transport[0];

		public void CreateTransport(string model, string brand, int year, string title)
		{
			int id = 0;
			
			// Get Id
			while (!int.TryParse(Console.ReadLine(), out id))
			{
				Console.WriteLine("Id must be a number");
				Console.WriteLine("Enter id");
			}
			
			// Get Model
			Console.WriteLine("Enter model");
			while (string.IsNullOrWhiteSpace(model = Console.ReadLine()))
			{
				Console.WriteLine("Model cannot be null");
				Console.WriteLine("Enter model");
			}
			
			// Get Brand
			Console.WriteLine("Enter brand");
			while ((brand = Console.ReadLine()).Length < 3)
			{
				Console.WriteLine("Brand length cannot be less than 3");
				Console.WriteLine("Enter brand");
			}
			
			// Get Year
			Console.WriteLine("Enter year");
			while (!int.TryParse(Console.ReadLine(), out year) || year < 1900)
			{
				Console.WriteLine("Year cannot be less than 1900");
				Console.WriteLine("Enter year");
			}
			
			// Get Title
			Console.WriteLine("Enter title");
			title = Console.ReadLine();

			Transport tr = new Transport
			{
				Id = id,
				Model = model,
				Brand = brand,
				Year = year,
				Title = title
			};

			Array.Resize(ref transports, transports.Length + 1);
			transports[transports.Length - 1] = tr;

			Console.WriteLine("Transport Created successfully");
		}

		public void GetAllTransports()
		{

			Console.WriteLine("\n=== All Transports ===");
			foreach (var transport in transports)
			{
				Console.WriteLine($"Id: {transport.Id}\nModel: {transport.Model}\nBrand: {transport.Brand}\nYear: {transport.Year}\nTitle: {transport.Title}");
				Console.WriteLine("---");
			}
		}
	}
}
